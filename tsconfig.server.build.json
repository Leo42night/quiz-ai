{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ES2022", "DOM"],
    "outDir": "build",
    "rootDir": "src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,

    // penting untuk Express di Node modern yang pakai import
    "moduleDetection": "force",

    // untuk bisa pakai import ... from "express" dll
    "verbatimModuleSyntax": true
  },
  "include": [
    "src/server.ts"
  ]
}
